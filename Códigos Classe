import java.util.Scanner;

public class produtos {
    private int id;
    private String nome;
    private double preco;
    private static int ultimo_id = 0;

    // Construtor sem parâmetros
    public produtos() {
        this.id = ++ultimo_id;
        this.nome = "Nome não informado";
        this.preco = 0;
    }

    // Construtor que recebe nome e preço do produto
    public produtos(String nome, double preco) {
        this.id = ++ultimo_id;
        this.nome = nome;
        if (preco >= 0) {
            this.preco = preco;
        } else {
            this.preco = 0;
        }
    }

    // Método para exibir as informações do produto
    public void exibe() {
        System.out.println("Produto: " + nome);
        System.out.println("Id: " + id);
        System.out.println("Nome: " + nome);
        System.out.println("Preço: R$" + preco);
    }

    // Método para reajustar o preço do produto de acordo com o percentual
    public void reajustaPreco(double percentual) {
        preco += preco * (percentual / 100);
        System.out.println("Preço reajustado para R$" + preco);
    }

    // Métodos de acesso para os atributos da classe
    public int getId() {
        return id;
    }

    public String getNome() {
        return nome;
    }

    public double getPreco() {
        return preco;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    public void setPreco(double preco) {
        if (preco >= 0) {
            this.preco = preco;
        } else {
            this.preco = 0;
        }
    }

    // Método para obter o último id gerado
    public static int getUltimoId() {
        return ultimo_id;
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Criando o primeiro produto com informações fornecidas;
        System.out.println("Informe o nome do primeiro produto:");
        String nome1 = scanner.nextLine();
        System.out.println("Informe o preço do primeiro produto:");
        double preco1 = scanner.nextDouble();
        produtos produto1 = new produtos(nome1, preco1);

        // Criando o segundo produto com informações  fornecidas;
        scanner.nextLine(); // Consumindo a quebra de linha pendente
        System.out.println("Informe o nome do segundo produto:");
        String nome2 = scanner.nextLine();
        System.out.println("Informe o preço do segundo produto:");
        double preco2 = scanner.nextDouble();
        produtos produto2 = new produtos(nome2, preco2);

        // Valor de reajuste;
        System.out.println("Informe o percentual de reajuste:");
        double percentual = scanner.nextDouble();

        // Reajustando o preço dos produtos
        produto1.reajustaPreco(percentual);
        produto2.reajustaPreco(percentual);

        // Exibindo as informações dos produtos e o último id gerado
        produto1.exibe();
        System.out.println("Último id gerado: " + produtos.getUltimoId());
        produto2.exibe();
        System.out.println("Último id gerado: " + produtos.getUltimoId());

        scanner.close();
    }
}
